# Application Settings
APP_NAME=SalesGPT
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-here-generate-a-new-one

# Database (SQLite for local development)
DATABASE_URL=sqlite+aiosqlite:///./salesgpt.db

# AI Services
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key
DEEPGRAM_API_KEY=your-deepgram-api-key

# Hugging Face (for Pyannote)
HF_AUTH_TOKEN=hf_your-huggingface-token-here

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-here-generate-a-new-one
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=104857600

# Consent & Privacy
REQUIRE_PROSPECT_CONSENT=true
AUTO_DELETE_RECORDINGS_DAYS=90
